<Page x:Class="MasterPolProject.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>

        </Grid.RowDefinitions>

        <Button Grid.Row="1" x:Name="BackButton" Content="Назад" Margin="10,0,0,0" Click="BackButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Left"></Button>
        
        
        <StackPanel Grid.Column="0" Grid.Row="0" Width="250"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Наименование:" Margin="0,0,0,0"></Label>
            <TextBox x:Name="NameTB"  Height="30">
                
            </TextBox>

            <Label Content="Тип партнера:"  Margin="0,10,0,0"></Label>
            <ComboBox x:Name="TypeComboBox" DisplayMemberPath="TypeName"  Height="30"
                      VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            </ComboBox>

            <Label Content="Рейтинг:"  Margin="0,10,0,0"></Label>
            <TextBox x:Name="RatingTB"  Height="30"> 

            </TextBox>

            <Label Content="Адрес:"  Margin="0,10,0,0"></Label>
            <TextBox x:Name="AdressTB"  Height="30">

            </TextBox>
            
            

        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="0" Width="250"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="ФИО Директора:"></Label>
            <TextBox x:Name="DirectorTB" Height="30"></TextBox>

            <Label Content="Телефон:"  Margin="0,10,0,0"></Label>
            <TextBox x:Name="PhoneTB"  Height="30"></TextBox>

            <Label Content="Email:"  Margin="0,10,0,0"></Label>
            <TextBox x:Name="EmailTB"  Height="30"></TextBox>

            <Label Content="dsasdasd" Visibility="Hidden"></Label>
            <Button x:Name="SaveButton" Margin="0,10,0,0"  Height="30"
                    Content="Сохранить" Click="SaveButton_Click"></Button>
            
        </StackPanel>


    </Grid>
</Page>
